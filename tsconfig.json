{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "outDir": "build",
    "baseUrl": ".",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "allowJs": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
